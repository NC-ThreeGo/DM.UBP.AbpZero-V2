@using Abp.Extensions
@using DM.UBP.Web.Areas.Mpa.Models.Common.Modals

@model DM.UBP.Application.Dto.WeiXinManager.WeiXinConfigs.WeiXinConfigOutputDto

@Html.Partial("~/Areas/Mpa/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("DownTXL") + ": " + Model.CorpName) : L("DownTXL")))
@section Styles
{
}

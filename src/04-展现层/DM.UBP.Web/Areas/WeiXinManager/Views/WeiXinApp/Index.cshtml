@using Abp.Web.Mvc.Extensions
@using DM.UBP.Web.Navigation
@using DM.UBP.Domain.Service.WeiXinManager
@{
    ViewBag.CurrentPageName = UbpMenu.WeiXinAppManager;
}
@section Styles
{
    @*@Html.IncludeStyle("~/Areas/WeiXinManager/Views/WeiXinApp/Index.min.css")*@
}
@section Scripts
{
    @Html.IncludeScript("~/Areas/WeiXinManager/Views/WeiXinApp/Index.js")
}

<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>@L("WeiXinManager_App") </span> <small>@L("WeiXinAppInformations")</small>
                </h1>
            </div>
        </div>
    </div>
    <div class="col-xs-6 text-right">
        @if (IsGranted(AppPermissions_WeiXinManager.Pages_WeiXinManager_WeiXinApps_Create))
        {
            <button id="CreateNewWeiXinAppButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreatingWeiXinManager_App")</button>
        }
    </div>
</div>
<div class="portlet light margin-bottom-0">
    <div class="portlet-body">
        <div id="WeiXinAppTable"></div>
    </div>
</div>
